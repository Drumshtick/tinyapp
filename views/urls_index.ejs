<%- include('partials/_head') %>
  <title>URLs - TinyApp</title>
</head>
<body style="width: 100vw;">
  <header>
    <%- include('partials/_header') %>
  </header>
  <main style="margin: 1em;">
    <h3>My URLs</h3>
    <table class = "table">
      <thead>
        <tr>
          <th scope="col">Short URL</th>
          <th scope="col">Long URL</th>
          <th style="text-align: right;" scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% for (let url in urls) {%>
          <tr>
            <td><%= url %></td>
            <td><%= urls[url].longURL%></td>
            <td><form method="GET" action="urls/<%= url %>/edit"><button type="submit" class="btn btn-outline-primary">Edit</button></form></td>
            <td><form method="POST" action="urls/<%= url %>/delete?_method=DELETE"><button type="submit" class="btn btn-outline-danger">Delete</button></form></td>
          </tr>
      <% } %>
      </tbody>
    </table>
  </main>
 <%- include('partials/_bodyScripts') %>