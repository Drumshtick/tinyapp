<%- include('partials/_head') %>
  <title>New URL - TinyApp</title>
</head>
<body style="width: 100vw;">
  <%- include('partials/_header') %>
  <main style="margin: 1em; display: flex; align-items: center;flex-direction: column;">
    <h3 style="color: gray">Create TinyURL</h3>
    <form class="form-inline" action="/urls" method="POST">
      <div class="form-group mb-2">
        <label for="longURL">Enter a URL:</label>
        <input class="form-control" type="text" name="longURL" placeholder="http://" style="width: 300px; margin: 1em">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </main>
  <%- include('partials/_bodyScripts') %>