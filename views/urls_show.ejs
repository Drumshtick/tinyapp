<%- include('partials/_head') %>
  <title>URLs - TinyApp</title>
</head>
<body style="width: 100vw;">
  <%- include('partials/_header') %>
  <div class="card text-center">
    <div class="card-header"></div>
    <div class="card-body">
      <h5 class="card-title">TinyURL for: <%= longURL %></h5>
      <p class="card-text">Short URL: <a href="/u/<%= shortURL %>"><%= shortURL %></a></p>
    </div>
    <div class="card-header"></div>
    <div class="card-body">
      <h3 class="card-title" style="color: gray">Edit</h5>
      <div class="card-body" style="display: flex; justify-content: center;">
        <form class="form-inline" method="POST" action="/urls/<%= shortURL %>/?_method=PUT">
          <div class="form-group mb-2">
            <label class="h3" style="color: gray" for="longURL">Enter new URL:</label>
            <input class="form-control" type="text" name="longURL" placeholder="<%= longURL %>" style="width: 300px; margin: .5em">
            <button type="submit" class="btn btn-primary">Update</button>
          </div>
        </form>
      </div>
    </div>
    <div class="card-footer text-muted"></div>
  </div>
  <%- include('partials/_bodyScripts') %>