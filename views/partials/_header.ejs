<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls" >My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
      <% if (username) { %>
    <form method="POST" action="/logout" class="nav-item row gy-2 gx-3 align-items-center">
      <p class="col-auto" style="margin: auto;">Logged In As: <%= username %></p>
      <button type="submit" class=" col-auto btn btn-outline-danger" style="margin-right: 0.25em">Logout</button>
      <% } else{ %>
    <form method="POST" action="/login" class="nav-item row gy-2 gx-3 align-items-center">
      <input class="form-control col-auto" type="text" name="username" placeholder="username" style="width: 150px; margin-right: 0.25em; display: inline;">
      <button type="submit" class="col-auto btn btn-primary" style="margin-right: 0.25em">Login</button>
      <% } %>
      </form>
  </nav>
</header>